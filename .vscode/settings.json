{
  "files.exclude": {
    ".npmrc": true,
    ".ruby-version": true,
    "package-lock.json": true,
    "node_modules": true,
    "public": true,
    "logs": true,
    ".cache": true,
    "**/.gitkeep": true,
    "**/.gitattributes": true,
    "**/coverage": true,
    "**/Gemfile.lock": true,
    "**/.rspec": true,
    "**/.simplecov": true
  },
  "[typescript]": {
    "editor.indentSize": "tabSize",
    "editor.tabSize": 2,
    "typescript.preferences.quoteStyle": "single"
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "typescript.preferences.quoteStyle": "single"
  },
  "solargraph.useBundler": true
}
